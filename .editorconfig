root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.sht,*.html,*.shtm,*.shtml,*.htm,*.ng}]
indent_size = 2
tab_width = 2

[layout.html]
indent_size = 4
tab_width = 4

[{*.ts,*.tsx,*.tsm,*.js,*.jsx,*.jsm}]
indent_size = 4
tab_width = 4

[{*.py,*.pyi}]
indent_style = space
indent_size = 4
max_line_length = 99
